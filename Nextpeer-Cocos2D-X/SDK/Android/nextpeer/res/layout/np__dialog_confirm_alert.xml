<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/np__dialog_alert_title"
        style="@style/NP__.DialogWindowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/np__ic_dialog_error"
        android:text="@string/np__dialog_alert_error_connectivity_title" />

    <TextView
        android:id="@+id/np__dialog_alert_description"
        style="@style/NP__.Widget.Text.Content.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/np__content_margin"
        android:text="@string/np__dialog_alert_error_connectivity_description" />

    <Button
        android:id="@+id/np__dialog_alert_button_confirm"
        style="@style/NP__.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/np__widget_button_margin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/np__widget_button_positive_selector"
        android:drawableLeft="@drawable/np__ic_accept"
        android:text="@string/np__dialog_alert_confirm" />

</LinearLayout>